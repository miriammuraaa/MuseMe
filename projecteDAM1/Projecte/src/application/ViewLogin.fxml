<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="721.0" prefWidth="400.0">
         <children>
            <VBox alignment="CENTER" prefHeight="258.0" prefWidth="400.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imatges/logo.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox prefHeight="191.0" prefWidth="317.0" style="-fx-background-color: #e8e8e8;">
               <children>
                  <Label alignment="CENTER" text="Name">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="textUser" onKeyTyped="#eventKey" prefHeight="27.0" prefWidth="365.0" promptText="Name">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="Last Name">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="textUser" onKeyTyped="#eventKey" promptText="Last Name">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="Email">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="textUser" onKeyTyped="#eventKey" promptText="exemple@gmail.com">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="Password">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="textPassword" onKeyTyped="#eventKey" promptText="Password">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Hyperlink alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="399.0" text="Already have an account?" />
                  <VBox prefHeight="35.0" prefWidth="400.0" />
                  <Button fx:id="buttonSignUp" mnemonicParsing="false" onAction="#eventAction" prefHeight="31.0" prefWidth="400.0" text="Sign Up">
                     <padding>
                        <Insets right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
